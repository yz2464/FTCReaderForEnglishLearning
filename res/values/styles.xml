<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
   
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->             
    </style>
       
    <!-- Layout with Paddings -->
    <style name="LayoutWithPaddings" parent="AppBaseTheme">
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_padding</item>   
    </style>
    
    <!-- Header 1 Style -->
    <style name="HeaderOne" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/header_one_bottom_padding</item>
    </style>

    <!-- Button Large Style -->
    <style name="ButtonLarge" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Default Text Style -->
    <style name="DefaultTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- List View Style -->
    <style name="ListItemStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">@dimen/list_item_vertical_padding</item>
		<item name="android:paddingRight">@dimen/list_item_horizontal_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/list_item_horizontal_padding</item>              
    </style>       
</resources>
