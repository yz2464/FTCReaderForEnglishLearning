<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.tc.ftcreader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <!-- Add Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.tc.ftcreader.activity.Entry"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.tc.ftcreader.activity.SignUp"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name="edu.tc.ftcreader.activity.SignIn"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="edu.tc.ftcreader.activity.NewsBriefList"
            android:label="@string/title_activity_news_brief_list" >
        </activity>
    </application>

</manifest>
